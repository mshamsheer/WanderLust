<% if(success && success.length) {%>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2"
>
  <%= success %>
  <button
    class="btn-close"
    type="button"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }%>
<!-- for error -->
<% if(error && error.length) {%>
    <div
      class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2"
    >
      <%= error %>
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% }%>
    